{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "allowImportingTsExtensions": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "dist"
  },
  "include": ["server.ts", "src/game/**/*"]
}